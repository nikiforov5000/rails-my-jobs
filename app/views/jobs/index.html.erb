<div class="row pt-3 pl-3">
  <div class="col-2">
    <%= render 'layouts/new_job' %>
  </div>
  <div class="col-3">
    <%= line_chart Job.group_by_day(:created_at).count %>
    <%= pie_chart Job.group(:state).count %>
  </div>
  <div class="col border-left">
    <% if @jobs.count > 0 %>
      <h4>Jobs list: <%= @jobs.count %> records</h4>
      <% @jobs.each do |job| %>
        <% @job = job %>
        <%= render 'layouts/job_card', locals: { job: @job} %>
      <% end %>
    <% end %>
  </div>
</div>
